{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "outDir": "../../dist"
  },
  "include": [
    "**/*.ts"
  ]
}